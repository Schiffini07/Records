@model IEnumerable<User>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>User List</h2>
        </div>

        <div class="col-6 text-end">
            <a asp-controller="User" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New User
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Date
            </th>
            <th>
                Amount
            </th>
            <th>
                Literal Amount
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">
                    @item.Name
                </td>
                <td width="15%">
                    @item.Date
                </td>
                <td width="10%">
                    $@item.Amount.ToString("N2")
                </td>
                <td width="40%">
                    @item.LiteralAmount
                </td>
                <td width="15%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@item.Id"
                        class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id"
                        class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                        <a asp-controller="User" asp-action="ListCheck" asp-route-id="@item.Id"
                        class="btn btn-info mx-2"><i class="bi bi-aspect-ratio"></i> Show</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>